<li id="comment-<%= comment._id %>">
   <p>
      <% if(locals.user && (locals.user.id == comment.user.id)){%>
         <small>
            <a href="/comments/destroy/<%= comment.id%>">X</a>
         </small>
      <%}%>
      <p><%= comment.content%></p>
      <br>
      <small>
               <%= comment.user.name%>
      </small>
      <!-- Display the likes of this comment, if the user is logged in the show the link to toggle like, else just show the count -->
      <small>
         <% if(locals.user){%>
            <a class ="toggle-like-button" data-likes="<%= comment.likes.length%>" href="/likes/toggle/?id=<%= comment._id%>&type=Comment">
               <%= comment.likes.length %> Likes
            </a>
         <%}else{%>
            <%= comment.likes.length %> Likes
         <%}%>
      </small>
   </p>
</li>